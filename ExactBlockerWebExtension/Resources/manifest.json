{
    "name": "ExactBlocker",
    "version": "1.2",
    "manifest_version": 3,
    "description": "Block page elements like uBlock Origin",

    "permissions": [],
    "host_permissions": ["*://*.youtube.com/*", "*://*.google.com/*", "*://*.reddit.com/*", "*://*.instagram.com/*"],

    "content_scripts": [{
        "matches": ["*://*.youtube.com/*", "*://*.google.com/*", "*://*.reddit.com/*", "*://*.instagram.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
    }],

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    }
}
